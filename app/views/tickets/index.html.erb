<p id="notice"><%= notice %></p>

<h1>Homepage</h1>
<p>Before User signs in</p>


<div id="separation"></div>

<div id="map">
  <ul class="map">
    <li>MAP</li>
    <li>GOES</li>
    <li>HERE</li>
  </ul>
</div>

  <table>
    <thead>
      <tr>
        <th>Day</th>
        <th>Location</th>
        <th>Notifications</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.day %></td>
          <td><%= ticket.location %></td>
          <td><%= ticket.notifications %></td>
          <td><%= ticket.user %></td>
          <td><%= link_to 'Show', ticket %></td>
          <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
          <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<p><%= link_to 'New Ticket', new_ticket_path %></p>
<p><%= link_to 'New User', new_user_path %></p>
